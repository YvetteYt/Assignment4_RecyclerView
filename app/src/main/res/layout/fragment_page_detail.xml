<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightYellow"
    tools:context="com.example.yingtinghe.assignment4.Activity_RecyclerView">


    <ImageView
        android:id="@+id/movieImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/transformers2"
        android:layout_marginTop="43dp"
        android:layout_marginStart="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/movieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transformers2"
        android:layout_alignTop="@+id/movieImage"
        android:layout_toEndOf="@+id/movieImage" />

    <TextView
        android:textSize="18sp"
        android:id="@+id/movieYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="year"
        android:layout_below="@+id/movieName"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/movieImage" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/movieLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="length"
        android:layout_below="@+id/movieYear"
        android:layout_toEndOf="@+id/movieImage" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/movieDirector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieLength"
        android:layout_marginTop="25dp"
        android:text="director"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView9" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieImage"
        android:layout_alignStart="@+id/movieImage"
        android:layout_marginTop="14dp" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/movieStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="stars"
        android:layout_below="@+id/movieDirector"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView10" />

    <TextView
        android:textSize="20sp"
        android:id="@+id/movieDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="description"
        android:layout_below="@+id/ratingBar"
        android:layout_alignStart="@+id/ratingBar"
        android:layout_marginTop="15dp" />

    <TextView
        android:id="@+id/textView9"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Director: "
        android:layout_alignBaseline="@+id/movieDirector"
        android:layout_alignBottom="@+id/movieDirector"
        android:layout_toEndOf="@+id/movieImage" />

    <TextView
        android:id="@+id/textView10"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/movieImage"
        android:text="Cast: "
        android:layout_alignTop="@+id/movieStars" />

    <TextView
        android:id="@+id/rating"
        android:textSize="22sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rating"
        android:gravity="center_vertical"
        android:layout_alignBottom="@+id/ratingBar"
        android:layout_toEndOf="@+id/ratingBar"
        android:layout_alignTop="@+id/ratingBar" />

</RelativeLayout>
